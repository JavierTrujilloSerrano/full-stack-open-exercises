import axios from "axios";

const baseUrl = "https://studies.cs.helsinki.fi/restcountries/api";
const wheaterUrl = "https://api.openweathermap.org/data/2.5/weather?";
const apiKey = import.meta.env.VITE_OPENWEATHER_API_KEY;

const getAll = () => {
  return axios.get(baseUrl + "/all").then((response) => response.data);
};

const getOne = (name) => {
  return axios.get(`${baseUrl}/name/${name}`).then((response) => response.data);
};

const getWeather = (capital) => {
  return axios.get(`${wheaterUrl}q=${capital}&appid=${apiKey}&units=metric`);
};

export default { getAll, getOne, getWeather };
